<div class="container">
  <div class="row">
<div class="col-6 mx-auto">
  <% if @post.errors.any? %>
    <%= @post.errors.count %>件のエラー
    <ul>
      <% @post.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>


  <%= form_with model:@post do |f| %>
<div class="col-md-12">
  <%= f.label:"開始日時(日本時間)", class: "form-label" %>
  <%= f.datetime_field :match_date_time, class: "form-control" %>
</div>
<div class="col-md-6">
  <%= f.label:ホームチーム, class: "form-label" %>
  <%= f.text_field :home_team, class: "form-control" %>
</div>

<div class="col-md-6">
  <%= f.label:アウェーチーム, class: "form-label" %>
  <%= f.text_field :away_team, class: "form-control" %>
</div>
<div class="col-md-12">
  <%= f.label:リーグ・カップ名, class: "form-label" %>
  <%= f.text_field :category, class: "form-control" %>
</div>
<div class="col-md-12">
  <%= f.label:コメント, class: "form-label" %>
  <%= f.text_area :body, class: "form-control"  %>
</div>
<div class="col-md-12">
  <%= f.submit:投稿, class: "btn btn-block mt-4 btn-primary" %>
</div>
  <% end %>
  </div>
  </div>
  </div>
  