<h1>新規投稿フォーム</h1>
  <%= form_with model:@post do |f| %>
<div>
  <%= f.label:"開始日時(日本時間)" %>
  <%= f.text_field :match_date_time %>
</div>
<div>
  <%= f.label:試合 %>
  <%= f.text_field :home_team %><span>vs</span><%= f.text_field :away_team %>
</div>
<div>
  <%= f.label:リーグ・カップ名 %>
  <%= f.text_field :category %>
</div>
<div>
  <%= f.label:コメント %>
  <%= f.text_area :body %>
</div>
<div>
  <%= f.submit:投稿 %>
</div>
  <% end %>