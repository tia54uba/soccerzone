<h1>プロフィール編集</h1>
<div>
  <%= form_with model: @user do |f| %>
  <table>
    <tr>
      <th>プロフィール画像を選ぶ</th>
      <td><%= f.file_field :profile_image %></td>
    </tr>
    <tr>
      <th>名前</th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th>自己紹介</th>
      <td><%= f.text_area :introduction %></td>
    </tr>
  </table>
    <br>
    <div>
      <%= f.submit "変更を保存" %>
    </div>
  <% end %>
</div>