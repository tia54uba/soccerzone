<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h3 class="text-center">プロフィール編集</h3>
      
        <% if @user.errors.any? %>
          <div class="alert alert-danger" role="alert">
          <%= @user.errors.count %>件のエラー
          <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
          </div>
        <% end %>
      
        <div class="mt-5">
          <%= form_with model: @user do |f| %>
        <div class="col-md-12">
          <%= f.label :"プロフィール画像", class: "form-file" %>
          <%= f.file_field :profile_image,  class: "form-control" %>
        </div>
        <div class="col-md-12">
          <%= f.label:名前, class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="col-md-12">
          <%= f.label:自己紹介, class: "form-label" %>
          <%= f.text_area :introduction, class: "form-control"  %>
        </div>
        <div class="col-md-12">
          <%= f.submit "変更を保存", class: "btn btn-block mt-4 btn-primary" %>
        </div>
          <% end %>
        </div>
      
    </div>
  </div>
</div>